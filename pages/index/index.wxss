/**index.wxss**/
.slide-image{
    width: 100%;
}
.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: black;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
    margin-top:2px;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}
/*菜单栏*/
.index-nav{

    display: flex;
    flex-wrap: wrap;
    width: 100%;
    background-color: white ;
    margin-top: 5px; 
}
.nav-item{
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    box-sizing: border-box;
    height:50px;
    padding-bottom: 10px;
    
}
.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 325rpx;
    height: 325rpx;
    margin: 0 20rpx 20rpx 0;
    border-radius: 10px;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}