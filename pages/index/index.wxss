/**index.wxss**/
.swiper-box{
    height: 400rpx;
}
.slide-image{
    width: 100%;
}
.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: black;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
    margin-top:4rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}
/*菜单栏*/
.index-nav{

    display: flex;
    flex-wrap: wrap;
    width: 100%;
    background-color: white ;
    margin-top: 10rpx;
}
.nav-item{
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    box-sizing: border-box;
    height:100rpx;
    padding-bottom: 10rpx;
    padding-top:10rpx;
}
.newest-box{
    padding:0 40rpx;
}
.newest-list{
    display: inline-block;
    width: 325rpx;
    height: 200rpx;
    margin:10rpx 20rpx 20rpx 0;
    border-radius: 20rpx;
    text-align: center;
    background: #f5f6f5;
}
.newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-list image{
    width: 325rpx;
    height: 200rpx;
    margin:0 20rpx 10rpx 0;
    border-radius: 20rpx;
}
.newest-text{
    font-size:32rpx;
    text-align:left;
    text-indent:20rpx;
    margin-bottom:10rpx;
}
.newest-price-text {
    margin-bottom: 10rpx;
    color: #ff0000;
}

.nav-icon {
    width: 64rpx;
    height: 64rpx;
}

.nav-text {
    font-size: 24rpx;
}