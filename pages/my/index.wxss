/**index.wxss**/
.container {
  background-color: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  padding: 15px;
  height:160px;
  justify-content: center;
  box-sizing: border-box;
  align-items: center; 
  background: url(https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=2294554413,46595458&fm=27&gp=0.jpg);
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 5px;
  border-radius: 50%;
  border: 1px solid #ddd;
  
}
.userinfo-nickname {
  color: dark;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 24px;
  margin-right: 5px;
  margin-left:0px;
 
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  margin-bottom: 2px;
  margin-right: 5px;
  margin-left: 0px;
  vertical-align: middle;
  
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 16px;
  color: #939393;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background:#ff0000 ;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}
.with_arrow{
  position: absolute;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}